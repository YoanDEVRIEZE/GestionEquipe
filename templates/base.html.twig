<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="viewport" content="initial-scale=1, maximum-scale=1">
        <link rel="icon" href="{{ asset('images/favicon.ico') }}" type="image/x-icon" />
        <title>Gestion Equipe - {% block title %}{% endblock %}</title>
        <meta name="author" content="Yoan DE VRIEZE">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="inner_page login">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-3 col-lg-2 bg-dark position-fixed top-0 start-0 vh-100 p-3">
                    <h5 class="text-white mb-4">Gestion Equipe</h5>
                    <ul class="nav nav-pills flex-column gap-2">
                        <li class="nav-item">
                            <a class="nav-link text-white {{ 
                            app.request.attributes.get('_route') == 'gestion_equipe_home' ? 'active' : '' }}" 
                            href="{{ path('gestion_equipe_home') }}">Tableau de bord</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white {{ 
                            app.request.attributes.get('_route') == 'gestion_equipe_user_management_index' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_user_management_edit' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_user_management_show' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_user_management_new' ? 'active' : '' }}" 
                            href="{{ path('gestion_equipe_user_management_index') }}">Gestion Utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white {{
                            app.request.attributes.get('_route') == 'gestion_equipe_position_index' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_position_new' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_position_show' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_position_edit' ? 'active' : '' }}" 
                            href="{{ path('gestion_equipe_position_index') }}">Gestion Postes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white {{
                            app.request.attributes.get('_route') == 'gestion_equipe_departments_index' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_departments_new' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_departments_show' 
                            or app.request.attributes.get('_route') == 'gestion_equipe_departments_edit' ? 'active' : '' }}" 
                            href="{{ path('gestion_equipe_departments_index') }}">Gestion DÃ©partement / Service</a>
                        </li>
                    </ul>
                </nav>
                <main class="col-12 col-md-9 col-lg-10 offset-md-3 offset-lg-2 vh-100 overflow-auto p-4">
                    {% block main_content %}{% endblock %}
                </main>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
