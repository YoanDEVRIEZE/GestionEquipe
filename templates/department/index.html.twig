{% extends 'base.html.twig' %}

{% block title %}Liste des services{% endblock %}

{% block main_content %}
    <h1 class="mb-1">
        <i class="bi bi-diagram-3 me-2"></i> Liste des services
        <small class="text-muted d-block fs-6">
            {{ countDepartment }} service{{ countDepartment > 1 ? 's' : '' }}
        </small>
    </h1>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} alert-dismissible fade show" role="alert">
                {{ message|raw }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('gestion_equipe_department_new') }}" class="btn btn-primary">➕ Créer un service</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th class="align-middle" style="max-width: 120px;">Nom</th>
                    <th class="align-middle" style="max-width: 120px;">Nombre d'utilisateurs</th>
                    <th class="text-center align-middle" style="max-width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for departments in department %}
                <tr>
                    <td class="align-middle" style="max-width: 120px;">{{ departments.name }}</td>
                    <td class="align-middle" style="max-width: 120px;">{{ countUsersPerDepartment[departments.id] }}</td>
                    <td class="text-center align-middle" style="max-width: 120px;">
                        <a href="{{ path('gestion_equipe_department_show', {'id': departments.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                        <a href="{{ path('gestion_equipe_department_edit', {'id': departments.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                        <form method="post" action="{{ path('gestion_equipe_department_delete', {'id': departments.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer le service \'{{ departments.name }}\' ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departments.id) }}">
                            <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                        </form>
                        </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center text-muted py-4">Aucun service trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation mt-4">
            {{ knp_pagination_render(department, 'pagination/bootstrap5.html.twig') }}
        </div>
    </div>
{% endblock %}
