{% extends 'base.html.twig' %}

{% block title %}Le service{% endblock %}

{% block main_content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-1">
            <i class="bi bi-diagram-3 me-2"></i> Liste des utilisateurs du service {{ department.name }}
            <small class="text-muted d-block fs-6">
                {{ countUsers }} utilisateur{{ countUsers > 1 ? 's' : '' }}
            </small>
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('gestion_equipe_department_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
            <a href="{{ path('gestion_equipe_department_edit', {'id': department.id}) }}" class="btn btn-primary">Modifier</a>
            <form method="post" action="{{ path('gestion_equipe_department_delete', {'id': department.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer le service \'{{ department.name }}\' ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ department.id) }}">
                <button class="btn btn-danger" type="submit">Supprimer</button>
            </form>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th class="align-middle">Identifiant</th>
                    <th class="d-none d-md-table-cell align-middle">Nom</th>
                    <th class="d-none d-md-table-cell align-middle">Prénom</th>
                    <th class="d-none d-md-table-cell align-middle">Email</th>
                    <th class="d-none d-md-table-cell align-middle">Téléphone</th>
                    <th class="d-none d-md-table-cell align-middle">Poste occupé</th>
                    <th class="d-none d-md-table-cell align-middle">Service</th>
                    <th class="align-middle text-center">Etat du compte</th>
                    <th class="text-end align-middle text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="text-truncate align-middle">{{ user.companyId ? user.companyId : '—' }}</td>
                        <td class="d-none d-md-table-cell text-truncate align-middle" style="max-width: 120px;">{{ user.lastName ? user.lastName : '—' }}</td>
                        <td class="d-none d-md-table-cell text-truncate align-middle" style="max-width: 120px;">{{ user.firstName ? user.firstName : '—' }}</td>
                        <td class="d-none d-md-table-cell text-truncate align-middle" style="max-width: 120px;">{{ user.email ? user.email : '—' }}</td>
                        <td class="d-none d-md-table-cell align-middle">{{ user.phonePro ? user.phonePro : '—' }}</td>
                        <td class="d-none d-md-table-cell align-middle">
                            {% set rolesOrder = ['ROLE_USER', 'ROLE_MANAGER', 'ROLE_ADMIN'] %}
                            {% for role in rolesOrder %}
                                {% if role in user.roles %}
                                    {% if role == 'ROLE_USER' %}
                                        <span class="badge bg-primary">Utilisateur</span>
                                    {% elseif role == 'ROLE_MANAGER' %}
                                        <span class="badge bg-warning">Manager</span>
                                    {% elseif role == 'ROLE_ADMIN' %}
                                        <span class="badge bg-danger">Administrateur</span>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td class="d-none d-md-table-cell align-middle">{{ user.department ? user.department.name : '—' }}</td>
                        <td class="align-middle text-center">
                            <span class="badge bg-{{ user.isActive ? 'success' : 'danger' }}">
                                {{ user.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                        </td>
                        <td class="text-end align-middle text-center">
                            <a href="{{ path('gestion_equipe_user_management_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                            <a href="{{ path('gestion_equipe_user_management_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                            <form method="post" action="{{ path('gestion_equipe_user_management_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation mt-4">
            {{ knp_pagination_render(users, 'pagination/bootstrap5.html.twig') }}
        </div>
    </div>
{% endblock %}
