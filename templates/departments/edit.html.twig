{% extends 'base.html.twig' %}

{% block title %}Modifier un département / Service{% endblock %}

{% block main_content %}
    <h1 class="mb-4">Modifier le département / service {{ department.name }}</h1>
    {{ form_start(form) }}
        <div class="d-flex justify-content-end gap-2 mb-3">
            <a href="{{ path('gestion_equipe_departments_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
            <button type="submit" class="btn btn-primary">Modifier le département / service {{ department.name }}</button>
        </div>
        {{ include('departments/_form.html.twig') }}
    {{ form_end(form) }}
{% endblock %}
