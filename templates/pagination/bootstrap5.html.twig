{% if pageCount > 1 %}
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-end">
            <li class="page-item {{ previous is not defined ? 'disabled' }}">
                <a class="page-link" href="{{ previous is defined ? path(route, query|merge({(pageParameterName): previous})) : '#' }}" aria-label="Précédent">&laquo;</a>
            </li>
            {% for page in pagesInRange %}
                <li class="page-item {{ page == current ? 'active' }}">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% endfor %}
            <li class="page-item {{ next is not defined ? 'disabled' }}">
                <a class="page-link" href="{{ next is defined ? path(route, query|merge({(pageParameterName): next})) : '#' }}" aria-label="Suivant">&raquo;</a>
            </li>
        </ul>
    </nav>
{% endif %}
