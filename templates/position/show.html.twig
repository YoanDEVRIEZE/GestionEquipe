{% extends 'base.html.twig' %}

{% block title %}Le poste{% endblock %}

{% block main_content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-1">
            Liste des utilisateurs au poste de {{ position.name }}
            <small class="text-muted d-block fs-6">
                {{ countUsers }} utilisateur{{ countUsers > 1 ? 's' : '' }}
            </small>
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('gestion_equipe_position_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
            <a href="{{ path('gestion_equipe_position_edit', {'id': position.id}) }}" class="btn btn-primary">Modifier</a>
            <form method="post" action="{{ path('gestion_equipe_position_delete', {'id': position.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer le poste \'{{ position.name }}\' ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ position.id) }}">
                <button class="btn btn-danger" type="submit">Supprimer</button>
            </form>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Identifiant</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Poste occupé</th>
                    <th>Département / Service</th>
                    <th>Etat du compte</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.companyId }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phonePro }}</td>
                        <td>{{ user.position ? user.position.name : '-' }}</td>
                        <td>{{ user.department ? user.department.name : '-' }}</td>
                        <td>
                            <span class="badge bg-{{ user.isActive ? 'success' : 'danger' }}">
                                {{ user.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                        </td>
                        <td class="text-end">
                            <a href="{{ path('gestion_equipe_user_management_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                            <a href="{{ path('gestion_equipe_user_management_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                            <form method="post" action="{{ path('gestion_equipe_user_management_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation mt-4">
            {{ knp_pagination_render(users, 'pagination/bootstrap5.html.twig') }}
        </div>
    </div>
{% endblock %}
