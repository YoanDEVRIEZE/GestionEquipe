{% extends 'base.html.twig' %}

{% block title %}Modifier une équipe{% endblock %}

{% block main_content %}
    <h1 class="mb-4">
        <i class="bi bi-person-vcard-fill me-2"></i> Modifier l'équipe {{ team.name }}
    </h1>
    {{ form_start(form) }}
        <div class="d-flex justify-content-end gap-2 mb-3">
            <a href="{{ path('gestion_equipe_team_index') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
            <button type="submit" class="btn btn-primary">Modifier l'équipe {{ team.name }}</button>
        </div>
        {{ include('team/_form.html.twig') }}
    {{ form_end(form) }}
{% endblock %}
