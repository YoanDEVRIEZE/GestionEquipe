{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block stylestylesheets %}
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
{% endblock %}

{% block main_content %}
    <h1 class="mb-1 mb-4">
        <i class="bi bi-person-vcard-fill me-2"></i> Liste des équipes
        <small class="text-muted d-block fs-6">
            {{ countTeam }} équipe{{ countTeam > 1 ? 's' : '' }}
        </small>
    </h1>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} alert-dismissible fade show mb-4" role="alert">
                {{ message|raw }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex justify-content-end align-items-center mb-3" id="datatable-controls">
        <a href="{{ path('gestion_equipe_team_new') }}" class="btn btn-primary ms-2">➕ Créer une équipe</a>
    </div>
    <div class="table-responsive">
        <table id="dataTable" class="table table-bordered table-striped table-hover table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nom</th>
                    <th class="d-none d-md-table-cell">Description</th>
                    <th class="d-none d-md-table-cell text-center">Nombre d'utilisateurs</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for teams in team %}
                <tr>
                    <td>{{ teams.name }}</td>
                    <td class="d-none d-md-table-cell text-truncate" style="max-width: 250px;">{{ teams.description }}</td>
                    <td class="d-none d-md-table-cell text-center">{{ countUsersPerTeam[teams.id] }}</td>
                    <td class="text-center">
                        <a href="{{ path('gestion_equipe_team_show', {'id': teams.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                        <a href="{{ path('gestion_equipe_team_edit', {'id': teams.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                        <form method="post" action="{{ path('gestion_equipe_team_delete', {'id': teams.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer le service \'{{ teams.name }}\' ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ teams.id) }}">
                            <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/dataTable.js') }}"></script>
{% endblock %}
