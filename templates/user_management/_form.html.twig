<div class="container-fluid">
    <div class="row g-3">
        <div class="col-md-6 d-flex align-items-center">
            <div class="form-check mt-4">
                {{ form_widget(form.isActive, { attr: { class: 'form-check-input' } }) }}
                {{ form_label(form.isActive, null, { label_attr: { class: 'form-check-label text-black' } }) }}
                {{ form_errors(form.isActive) }}
                <small class="form-text text-muted d-block mt-1">
                    Cocher pour autoriser l'utilisateur à se connecter à l'application
                </small>
            </div>
        </div>
        <div class="col-md-6">
            {{ form_label(form.roles) }}
            <div class="d-flex flex-wrap gap-3">
                {% for choice in form.roles %}
                    <div class="form-check d-flex align-items-center">
                        {{ form_widget(choice, { attr: { class: 'form-check-input' } }) }}
                        {{ form_label(choice, null, { label_attr: { class: 'form-check-label text-black ms-1 mb-0' } }) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_errors(form.roles) }}
            <small class="form-text text-muted d-block mt-1">
                Sélectionner un ou plusieurs postes occupés par l'utilisateur
            </small>
        </div>
        <hr>
        <div class="col-md-6">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.email) }}
            <small class="form-text text-muted d-block mt-1">
                L'adresse email professionnelle de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.emailPrivate) }}
            {{ form_widget(form.emailPrivate, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.emailPrivate) }}
            <small class="form-text text-muted d-block mt-1">
                L'adresse email personnelle de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.lastName) }}
            <small class="form-text text-muted d-block mt-1">
                Le nom de famille de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.firstName) }}
            <small class="form-text text-muted d-block mt-1">
                Le prénom de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.phonePro) }}
            {{ form_widget(form.phonePro, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.phonePro) }}
            <small class="form-text text-muted d-block mt-1">
                Le numéro de téléphone professionnel de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.phone) }}
            <small class="form-text text-muted d-block mt-1">
                Le numéro de téléphone personnel de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.companyId) }}
            {{ form_widget(form.companyId, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.companyId) }}
            <small class="form-text text-muted d-block mt-1">
                L'identifiant interne de l'utilisateur dans l'entreprise.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.adress) }}
            {{ form_widget(form.adress, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.adress) }}
            <small class="form-text text-muted d-block mt-1">
                L'adresse postale complète de l'utilisateur.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.department) }}
            {{ form_widget(form.department, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.department) }}
            <small class="form-text text-muted d-block mt-1">
                Le service auquel l'utilisateur appartient.
            </small>
        </div>
        <div class="col-md-6">
            {{ form_label(form.avatar) }}
            {{ form_widget(form.avatar, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.avatar) }}
            <small class="form-text text-muted d-block mt-1 mb-4">
                Sélectionner la photo de profil de l'utilisateur.
            </small>
        </div>
    </div>
</div>
