{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3 mb-0">Modifier l'utilisateur {{ user.firstName }} {{ user.lastName }}</h1>
            <div>
                <a href="{{ path('gestion_equipe_user_management_index') }}" class="btn btn-outline-secondary me-2">
                    ← Retour à la liste
                </a>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                {{ include('user_management/_form.html.twig', { button_label: 'Modifier' }) }}
            </div>
        </div>
    </div>
{% endblock %}