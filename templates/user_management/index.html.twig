{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block main_content %}
    <h1 class="mb-4">Liste des utilisateurs</h1>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('gestion_equipe_user_management_new') }}" class="btn btn-primary">➕ Créer un utilisateur</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Identifiant</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Poste occupé</th>
                    <th>Département / Service</th>
                    <th>Etat du compte</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.companyId }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phonePro }}</td>
                        <td>{{ user.position.name }}</td>
                        <td>{{ user.department }}</td>
                        <td>
                            <span class="badge bg-{{ user.isActive ? 'success' : 'danger' }}">
                                {{ user.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                        </td>
                        <td class="text-end">
                            <a href="{{ path('gestion_equipe_user_management_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                            <a href="{{ path('gestion_equipe_user_management_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                            <form method="post" action="{{ path('gestion_equipe_user_management_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation mt-4">
            {{ knp_pagination_render(users, 'pagination/bootstrap5.html.twig') }}
        </div>
    </div>
{% endblock %}
